<!DOCTYPE html>
<html>
  <head>
    <title>devmatch</title>
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
  <div class='container'>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <%= link_to root_path, class: "navbar-brand" do %>
        <i class="fa fa-handshake-o"></i>
        devmatch
      <% end %>
    </div>
    
    <div class="collapse navbar-collapse" id="main-nav-collapse">
      <% if user_signed_in? %>
         <div class="nav navbar-nav navbar-right" id="nav-buttons">
          <div class="dropdown">
            <i class="fa fa-user-circle dropbtn" onclick="myFunction()"></i>
            <div id="navbar-dropdown" class="dropdown-content">
              <span> <%= link_to "View Profile", user_path(id: current_user.id), class: 'btn btn-primary btn-navbar' %> </span>
              <span> <%= link_to "Edit Profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-primary btn-navbar' %> </span>
              <span> <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-navbar btn-block' %> </span>
            </div>
          </div>
        </div>
      <% else %>
        <div class="nav navbar-nav navbar-right" id="nav-buttons">
          <%= link_to "Login", new_user_session_path, class: 'btn btn-primary btn-navbar' %>
        </div>
      <% end%>
      <ul class="nav navbar-nav navbar-right">
       <li><%= link_to "About", about_path %></li>
       <li><%= link_to "Contact Us", new_contact_path %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</nav>
    
    <!-- stylized error messages (using boostrap) -->
    <div class="container">
      <% flash.each do |type, msg| %>
         <%= content_tag :div, msg, class: "alert alert-#{type} alert-dismissable fade in"  %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
